{
  "name": "inkan.link",
  "version": "1.4.0",
  "description": "Inkan.link deepfake proof digital services",
  "main": "index.js",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "alpinejs": "^3.15.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.18"
  },
  "notes": {
    "tailwindcss": "Do not upgrade to 4.x as it requires substantial changes"
  },
  "scripts": {
    "start": "concurrently bun:watch:*",
    "dev": "./dev.sh",
    "tw": "bunx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css",
    "tw:prod": "NODE_ENV=production bunx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --minify",
    "watch:tw": "bunx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:hugo": "hugo server",
    "build": "bun run tw:prod && HUGO_ENVIRONMENT=production hugo --minify",
    "build:preview": "bun run tw && hugo --minify",
    "test": "hugo",
    "analyze": "chmod +x analyze-website.sh && ./analyze-website.sh",
    "analyze:quick": "chmod +x analyze-website.sh && ./analyze-website.sh --quick",
    "lighthouse": "lighthouse https://inkan.link --config-path=./lighthouse-config.js --output html --output json --output-path=./lighthouse-report",
    "lighthouse:local": "hugo server & sleep 3 && lighthouse http://localhost:1313 --config-path=./lighthouse-config.js --output html --output json --output-path=./lighthouse-local && pkill hugo",
    "accessibility": "axe https://inkan.link --save ./accessibility-report.json",
    "setup:analysis": "bun install -g lighthouse @axe-core/cli pa11y playwright && playwright install chromium",
    "test:visual": "playwright test tests/visual/",
    "test:console": "playwright test tests/console-monitor.spec.js",
    "test:a11y": "playwright test tests/accessibility.spec.js",
    "test:screenshots": "playwright test tests/screenshot-capture.spec.js",
    "test:redesign": "playwright test tests/redesign-verification.spec.js",
    "test:redesign:summary": "playwright test tests/redesign-summary.spec.js",
    "test:security": "playwright test tests/security-verification.spec.js",
    "test:sitemap": "playwright test tests/sitemap-coverage.spec.js",
    "test:seo": "playwright test tests/seo/ --grep @ahrefs",
    "test:all": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:update": "playwright test --update-snapshots",
    "playwright:install": "bunx playwright install",
    "playwright:report": "bunx playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nusserstudios/tailbliss.git"
  },
  "keywords": [
    "hugo",
    "tailwind",
    "tailwindcss",
    "alpinejs",
    "minimal",
    "responsive",
    "light mode",
    "dark mode",
    "hugo blog",
    "categories",
    "tags"
  ],
  "author": "Inkan.link SAS",
  "license": "Apache-2.0",
  "homepage": "https://inkan.link"
}
