{
  "name": "inkan.link",
  "version": "1.3.2",
  "description": "Inkan.link deepfake proof digital services",
  "main": "index.js",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.14.9",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.14"
  },
  "notes": {
    "tailwindcss": "Do not upgrade to 4.x as it requires substantial changes"
  },
  "scripts": {
    "start": "concurrently npm:watch:*",
    "serve": "hugo server --baseURL http://localhost:1313 --bind 0.0.0.0 --port 1313 --navigateToChanged --disableFastRender --buildDrafts --buildFuture",
    "dev": "./dev.sh",
    "dev:full": "concurrently \"npm:watch:tw\" \"npm:serve\"",
    "tw": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css",
    "tw:watch": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:tw": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:hugo": "hugo server --baseURL http://localhost:1313 --bind 0.0.0.0 --port 1313 --navigateToChanged --disableFastRender --buildDrafts --buildFuture",
    "build": "hugo --minify",
    "test": "hugo",
    "analyze": "chmod +x analyze-website.sh && ./analyze-website.sh",
    "analyze:quick": "chmod +x analyze-website.sh && ./analyze-website.sh --quick",
    "lighthouse": "lighthouse https://inkan.link --config-path=./lighthouse-config.js --output html --output json --output-path=./lighthouse-report",
    "lighthouse:local": "hugo server & sleep 3 && lighthouse http://localhost:1313 --config-path=./lighthouse-config.js --output html --output json --output-path=./lighthouse-local && pkill hugo",
    "accessibility": "axe https://inkan.link --save ./accessibility-report.json",
    "setup:analysis": "npm install -g lighthouse @axe-core/cli pa11y playwright && playwright install chromium"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nusserstudios/tailbliss.git"
  },
  "keywords": [
    "hugo",
    "tailwind",
    "tailwindcss",
    "alpinejs",
    "minimal",
    "responsive",
    "light mode",
    "dark mode",
    "hugo blog",
    "categories",
    "tags"
  ],
  "author": "Inkan.link SAS",
  "license": "Apache-2.0",
  "homepage": "https://inkan.link",
  "dependencies": {}
}
