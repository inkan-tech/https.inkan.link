{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages }}
  {{- if .Permalink }}
  {{/* Use canonical URL if specified, otherwise use permalink */}}
  {{- $canonicalURL := .Permalink -}}
  {{- if isset .Params "canonical" -}}
    {{- $canonicalURL = .Params.canonical -}}
  {{- end -}}
  <url>
    <loc>{{ $canonicalURL }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
    {{- end }}
    {{- with .Sitemap.ChangeFreq }}
    <changefreq>{{ . }}</changefreq>
    {{- end }}
    {{- if ge .Sitemap.Priority 0.0 }}
    <priority>{{ .Sitemap.Priority }}</priority>
    {{- end }}

    {{/* Add hreflang tags - ALWAYS include self-reference */}}
    {{/* Self-referencing hreflang - every page references itself */}}
    <xhtml:link
      rel="alternate"
      hreflang="{{ .Language.Lang }}"
      href="{{ $canonicalURL }}" />

    {{/* Add alternate language versions */}}
    {{- if .IsTranslated }}
    {{- range .Translations }}
    {{- $transCanonicalURL := .Permalink -}}
    {{- if isset .Params "canonical" -}}
      {{- $transCanonicalURL = .Params.canonical -}}
    {{- end -}}
    <xhtml:link
      rel="alternate"
      hreflang="{{ .Language.Lang }}"
      href="{{ $transCanonicalURL }}" />
    {{- end }}
    {{- end }}

    {{/* x-default hreflang - fallback to default language (French) */}}
    {{- if eq .Language.Lang "fr" -}}
    <xhtml:link
      rel="alternate"
      hreflang="x-default"
      href="{{ $canonicalURL }}" />
    {{- else -}}
      {{- if .IsTranslated -}}
        {{- range .Translations -}}
          {{- if eq .Language.Lang "fr" -}}
            {{- $frCanonicalURL := .Permalink -}}
            {{- if isset .Params "canonical" -}}
              {{- $frCanonicalURL = .Params.canonical -}}
            {{- end -}}
    <xhtml:link
      rel="alternate"
      hreflang="x-default"
      href="{{ $frCanonicalURL }}" />
          {{- end -}}
        {{- end -}}
      {{- else -}}
        {{/* No translation exists - English-only page should point x-default to itself as fallback */}}
    <xhtml:link
      rel="alternate"
      hreflang="x-default"
      href="{{ $canonicalURL }}" />
      {{- end -}}
    {{- end }}
    
    {{/* Add image information */}}
    {{- if .Params.featured_image }}
    <image:image>
      <image:loc>{{ .Site.BaseURL }}{{ .Params.featured_image | relURL }}</image:loc>
      {{- if .Params.og_image_alt }}
      <image:caption>{{ .Params.og_image_alt }}</image:caption>
      {{- else }}
      <image:caption>{{ .Title }}</image:caption>
      {{- end }}
      <image:title>{{ .Title }}</image:title>
    </image:image>
    {{- end }}
  </url>
  {{- end }}
  {{- end }}
</urlset>